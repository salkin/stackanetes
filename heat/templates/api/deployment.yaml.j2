apiVersion: extensions/v1beta1
kind: Deployment
spec:
  replicas: {{ deployment.replicas }}
  template:
    metadata:
      labels:
        app: heat-api
    spec:
      nodeSelector:
        {{ deployment.control_node_label }}: enabled
      containers:
        - name: heat-api
          image: {{ deployment.image.api }}
          imagePullPolicy: Always
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "heat-api --config-file /etc/heat/heat.conf"
            - name: DEPENDENCY_JOBS
              value: "heat-db-sync,mariadb-init"
            - name: DEPENDENCY_SERVICE
              value: "mariadb,keystone-api"
            - name: DEPENDENCY_CONFIG
              value: "/etc/heat/heat.conf"
          ports:
            - containerPort: {{ network.port.api }}
          readinessProbe:
            tcpSocket:
              port: {{ network.port.api }}
          volumeMounts:
            - name: heatconf
              mountPath: /configmaps/heat.conf
      volumes:
        - name: heatconf
          configMap:
            name: heat-heatconf

